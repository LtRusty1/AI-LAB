# AI-Lab Backend Configuration
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql+asyncpg://ai_lab_user:your_password@localhost:5432/ai_lab

# Alternative SQLite for development (comment out DATABASE_URL above to use this)
# DATABASE_URL=sqlite+aiosqlite:///./ai_lab.db

# API Configuration
API_HOST=localhost
API_PORT=8001

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral

# GPU Configuration
CUDA_VISIBLE_DEVICES=0

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
# This will be auto-generated if not provided
# ENCRYPTION_KEY=your-base64-encoded-key

# Logging Level
LOG_LEVEL=INFO

# External API Keys (optional - can also be managed via UI)
# OPENAI_API_KEY=sk-your-openai-key
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
# GOOGLE_API_KEY=your-google-key 